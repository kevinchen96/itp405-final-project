<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      {{#link-to 'index' class="navbar-brand"}}Match Tennis{{/link-to}}
    </div>

    <div class="collapse navbar-collapse" id="main-navbar">
      <ul class="nav navbar-nav">
            {{#link-to 'index' tagName="li"}}<a href="">Home</a>{{/link-to}}
            {{#link-to 'explore' tagName="li"}}<a href="">Explore</a>{{/link-to}}
          	{{#if loggedIn}}
          		{{#link-to 'profile' tagName="li"}}<a href="">Profile</a>{{/link-to}}
          	{{/if}}
      </ul>
      <form>
      <ul class="search col-md-5 text-center">
           {{input type="text" value=query class="form-control" placeholder="Search for events or players" id="search"}}
       </ul>
       <ul class="search col-md-2 text-center" onchange={{action "selectFilter" value="target.value"}}>
       <select class="form-control" name="filters">
			<option value=events selected={{isEvent}}>Events</option>
			<option value=players selected={{!isEvent}}>Players</option>
		</select>
       </ul>
       <input type="submit" value="Submit" hidden="hidden" {{action 'search' }}>
       </form>
      <ul class="nav navbar-nav navbar-right">
      	{{#unless loggedIn}}
            {{#link-to 'login' tagName="li"}}<a href="">Login</a>{{/link-to}}
          {{/unless}}
          {{#if loggedIn}}
           <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{name}}<span class="caret"></span></a>
                <ul class="dropdown-menu">
            	{{#link-to 'profile' tagName="li"}}<a href="">My Profile</a>{{/link-to}}
              {{#if isAdmin}}
                {{#link-to 'admin.users' tagName="li"}}<a href="">Users</a>{{/link-to}}
                {{#link-to 'admin.events' tagName="li"}}<a href="">Events</a>{{/link-to}}
              {{/if}}
                  <li><a href="" {{action 'logout'}}>Logout</a></li>
                </ul>
            </li>
           {{/if}}

      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>